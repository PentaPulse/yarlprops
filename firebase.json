{
  "hosting": [
    {
      "target": "main",         
      "public": "main",      
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "admin",       
      "public": "admin",        
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    },
    "exportOnExit": {
      "enabled": true,
      "path": "./data"
    },
    "importOnStart": "./data",
    "singleProjectMode": true
  },
  "storage": {
    "rules": "storage.rules"
  }
}
