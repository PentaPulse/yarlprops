rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /systemusers/{id}{
    allow read,write;
    }
    
    match /contactUs/{id}{
    allow read:if isAdmin();
    allow write;
    }

		match /products/{productId}{
    	allow read;
      allow write;
    }

    
    function isAdmin() {
      let userEmail = request.auth.token.email;
      let uid = request.auth.uid;

      return userEmail != null && exists(/databases/$(database)/documents/systemusers/$(uid)).data.role == 'admin';
    }
  }
}